{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",  // This is needed for JSX support
    "paths": {
      "assets/*": ["./assets/*"],
      "@/*": ["./app/*"],
      "@/components/*": ["./components/*"],
      "@/constants/*": ["./constants/*"],
      "@/hooks/*": ["./hooks/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/index.tsx",
    "app.tsx",
    "app/login.tsx",
    "app/signup.tsx",
    "app/profile.tsx",
    "app/allergies_plants.tsx"
  ]
}
